<section class="collection-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <div class="collection-title">
          <h2>{{ section.settings.h2 }}</h2>
        </div>
      </div>
    </div>

    <div class="row">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'collectionfour' %}
            <div class="col-md-3 padding-extra">
              <div class="singel-collection-content">
                <a href="{{block.settings.url}}">
                <img src="{{block.settings.img | img_url:''}}" alt="">
                  <h4>{{ block.settings.title }}</h4>
                </a>
              </div>
            </div>
            {% when 'collectionsix' %}
              <div class="col-md-2 padding-extra    {% if section.settings.logo_aligment == "two" %}
                col-6
              {% elsif section.settings.logo_aligment == "three" %}
             
              col-4
              {% endif %}">
                <div class="singel-collection-content round-collection">
                  <a href="{{block.settings.url}}">
                  <img src="{{block.settings.img | img_url:''}}" alt="">
                    <h4>{{ block.settings.title }}</h4>
                  </a>
                </div>
              </div>
          {% when 'collectiontwo' %}
            <div class="col-md-6 padding-extra">
              <div class="singel-collection-content">
                <a href="{{block.settings.url}}">
                <img src="{{block.settings.img | img_url:''}}" alt="">
                  <h4>{{ block.settings.title }}</h4>
                </a>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
    .collection-wrapper  img {
      width: 100%;
  }
  .collection-wrapper{

  }
  .collection-title h2{

      font-size: calc(var(--font-heading-scale) * 2.4rem);

    margin:20px 0;





      color: #000;
      font-family: Helvetica Neue,Helvetica,Arial,sans-serif;
      font-weight: 700;
      text-transform: uppercase;

  }
  .padding-extra {
    padding: 7px 7px;
  }

  .singel-collection-content h4 {
    position: absolute;
    top: 50%;
    left: 50%;
    color: #fff;
    font-weight: bold;
    transform: translate(-50%, -50%);
    font-size: 25px;
    width: 100%;
    text-align: center;
}
.round-collection {
  border: 1px solid transparent;
  border-radius: 50%;
  overflow: hidden;
}

.round-collection h4{
  font-size: 17px;
}

@media only screen and (max-width: 600px) {
  .round-collection h4{
    font-size: 14px;
  }
}

{% if textshadow_enabled %}
  .singel-collection-content h4 {
    text-shadow: {{ h_shadow }} {{ h_shadow }} {{ textshadow_color }};
  }
{% endif %}
</style>
