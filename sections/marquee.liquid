<div class="marquee">
    <span>
      {%  if section.settings.text_link == '' %}
        {{ section.settings.marquee_text }}&nbsp;&nbsp;&nbsp;{{ section.settings.marquee_text }}&nbsp;&nbsp;&nbsp;{{ section.settings.marquee_text }}&nbsp;&nbsp;&nbsp;{{ section.settings.marquee_text }}&nbsp;&nbsp;&nbsp;{{ section.settings.marquee_text }}
      {% else %}
        <a href="{{ section.settings.text_link }}">{{ section.settings.marquee_text }}</a>
      {% endif %}
    </span>
  </div>

  {% style %}
    .marquee {
      height: 50px;	
      overflow: hidden;
      position: relative;
      background-color: {{ section.settings.bg_color }};
      margin-top: -40px;
    }
    .marquee span a{
      font-size: 2em;
      font-weight: bold;
      color: {{ section.settings.text_color }} !important;
      position: absolute;
      width: 100%;
      height: 100%;
      margin: 0;
      line-height: 50px;
      text-align: center;
      /* Starting position */
      -moz-transform:translateX(100%);
      -webkit-transform:translateX(100%);	
      transform:translateX(100%);
      /* Apply animation to this element */	
      -moz-animation: marquee 15s linear infinite;
      -webkit-animation: marquee 15s linear infinite;
      animation: marquee 15s linear infinite;
      text-decoration: none;
      text-transform: uppercase;
    }
    .marquee span a{
      margin-right:50px; 
    }
    /* Move it (define the animation) */
    @-moz-keyframes marquee {
      0%   { -moz-transform: translateX(100%); }
      100% { -moz-transform: translateX(-100%); }
    }
    @-webkit-keyframes marquee {
      0%   { -webkit-transform: translateX(100%); }
      100% { -webkit-transform: translateX(-100%); }
    }
    @keyframes marquee {
      0%   { 
        -moz-transform: translateX(100%); /* Firefox bug fix */
        -webkit-transform: translateX(100%); /* Firefox bug fix */
        transform: translateX(100%); 		
      }
      100% { 
        -moz-transform: translateX(-100%); /* Firefox bug fix */
        -webkit-transform: translateX(-100%); /* Firefox bug fix */
        transform: translateX(-100%); 
      }
    }
  {% endstyle %}


{% schema %}
{
  "name": "Marquee",
  "class": "section",
  "tag": "section",
  "settings": [
  {
    "type": "text",
    "id": "marquee_text",
    "label": "Marquee text"
  },
  {
    "type": "url",
    "id": "text_link",
    "label": "Text Link"
  },
  {
    "type": "color",
    "id": "bg_color",
    "label": "Background Color",
    "default": "#FFFFFF"
  },
  {
    "type": "color",
    "id": "text_color",
    "label": "Scrolling Text Color",
    "default": "#000000"
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 2,
    "unit": "s",
    "label": "Scroll Speed",
    "default": 36
  }
  ] ,
  "presets": [
  {
    "name": "Marquee",
    "category":"Custom"
  }
  ]
}
{% endschema %}